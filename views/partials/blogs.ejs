<div id="<%= blog.id %>" class="container mt-5 blog">
  <div class="d-flex justify-content-center row">
    <div class="col-md-8">
      <div
        class="shadow-lg p-3 mb-5 bg-dark text-white rounded"
        class="d-flex flex-column comment-section"
      >
        <div class="bg-dark text-white p-2">
          <div class="d-flex flex-row user-info">
            <img
              class="rounded-circle"
              src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png"
              width="65" height="65"
            />
            <div class="d-flex flex-column justify-content-start p-3">
              <span class="d-block font-weight-bold name"
                ><%= users.find(user => user.id ===
                blog.user_id).username%></span
              ><span class="date text-light-50"><%= blog.created_at %></span>
            </div>
          </div>
          <div class="mt-2">
            <p class="comment-text"><%= blog.body %></p>
          </div>
        </div>
        <div id="comments<%= blog.id %>">
          <h4 class="mt-3">Comments</h1>
        </div>
        <div class="bg-dark text-white p-2">
          <div class="d-flex flex-row align-items-start">
            <img
              class="rounded-circle"
              src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png"
              width="40"
            /><textarea
              id="textArea<%= blog.id %>" class="form-control ml-1 shadow-none textarea mt-5 mb-3"
            ></textarea>
          </div>
          <div class="mt-2 text-right">
            <button id="btn_<%= blog.id %>" class="btn btn-light btn-sm shadow-none textAreaBtn" type="button">
              Post comment
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


